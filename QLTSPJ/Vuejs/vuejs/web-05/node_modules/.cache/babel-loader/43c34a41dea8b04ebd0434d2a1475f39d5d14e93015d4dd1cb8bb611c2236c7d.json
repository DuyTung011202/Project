close' : 'btn-toggle--open'\" id=\"btn-toggle\" @click=\"toggleSidebar\">\r\n            </div>\r\n        </nav>\r\n    </div>\r\n</template>\r\n\r\n<script>\r\nexport default {\r\n    name: \"TheSidebar\",\r\n    data() {\r\n        return {\r\n            isSidebarOpen: false,\r\n            links: [\r\n                { id: 1, active: false },\r\n                { id: 2, active: false },\r\n                { id: 3, active: false },\r\n            ]\r\n        };\r\n    },\r\n    methods: {\r\n        toggleSidebar() {\r\n            this.isSidebarOpen = !this.isSidebarOpen;\r\n        },\r\n        handleSidebar() {\r\n            const showNavbar = (toggleId, navId, body, headerId) => {\r\n                const toggle = document.getElementById(toggleId),\r\n                    nav = document.getElementById(navId),\r\n                    bodypd = document.querySelector(body),\r\n                    headerpd = document.getElementById(headerId);\r\n                if (toggle && nav && bodypd && headerpd) {\r\n                    toggle.classList.toggle(\"btn-toggle--close\")\r\n                    nav.classList.toggle(\"show\");\r\n                    bodypd.classList.toggle(\"body-pd\");\r\n                    headerpd.classList.toggle(\"header-pd\");\r\n\r\n                }\r\n            }\r\n            showNavbar(\"btn-toggle\", \"nav-bar\", \"body\", \"header\");\r\n\r\n            const linkColor = document.querySelectorAll(\".nav__link\");\r\n\r\n            function colorLink() {\r\n                if (linkColor) {\r\n                    linkColor.forEach((l) => l.classList.remove(\"active\"));\r\n                    this.classList.add(\"active\");\r\n                }\r\n            }\r\n            linkColor.forEach((l) => l.addEventListener(\"click\", colorLink));\r\n        }\r\n    }\r\n}\r\n</script>\r\n\r\n<style>\r\n.l-navbar {\r\n    position: fixed;\r\n    top: 0;\r\n    left: -30%;\r\n    width: var(--nav-width);\r\n    height: 100vh;\r\n    b